    print(velocity)

def e():
    mass = int(input('enter the mass'))
    velocity= int(input('enter the velocity'))
    radius = int(input('enter the raduis'))
    centripetal_force =mass*(velocity^2)/radius
    print(centripetal_force)

def main():
        user_choice = input('what operation would you like to perform')
        if user_choice == "a":
            a()
        elif user_choice == "b":
            b()
        elif user_choice == "c":
            c()
        elif user_choice == "d":
            d()
        elif user_choice == "e":
            e()
        else:
            print("invalid input")
if  __name__ == '__main__':
